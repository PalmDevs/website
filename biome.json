{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							{
								"type": false
							}
						]
					}
				}
			}
		},
		"enabled": true
	},
	"files": {
		"includes": [
			"**/*.js",
			"**/*.json",
			"**/*.ts",
			"**/*.tsx",
			"**/*.jsx",
			"**/*.mjs",
			"**/*.astro"
		],
		"ignoreUnknown": true
	},
	"formatter": {
		"useEditorconfig": true
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded",
			"enabled": true,
			"quoteProperties": "asNeeded",
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"trailingCommas": "all"
		}
	},
	"json": {
		"parser": {
			"allowComments": true,
			"allowTrailingCommas": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"a11y": {
				"useKeyWithClickEvents": {
					"level": "off"
				}
			},
			"complexity": {
				"noBannedTypes": {
					"level": "warn"
				},
				"noCommaOperator": {
					"level": "off"
				},
				"useArrowFunction": {
					"level": "warn"
				}
			},
			"performance": {
				"noDelete": {
					"level": "warn"
				}
			},
			"recommended": true,
			"style": {
				"noNonNullAssertion": {
					"level": "off"
				},
				"useImportType": {
					"level": "warn",
					"options": {
						"style": "separatedType"
					}
				},
				"useNodejsImportProtocol": {
					"level": "off"
				},
				"useTemplate": {
					"level": "warn"
				}
			},
			"suspicious": {
				"noAssignInExpressions": {
					"level": "off"
				},
				"noConfusingVoidType": {
					"level": "off"
				},
				"noExplicitAny": {
					"level": "off"
				},
				"useIterableCallbackReturn": {
					"level": "off"
				}
			}
		}
	},
	"vcs": {
		"clientKind": "git",
		"enabled": true,
		"useIgnoreFile": true
	}
}