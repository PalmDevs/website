---
import '~/styles/base.scss'
// import '~/styles/breakpoints-debug.scss'

import { ClientRouter } from 'astro:transitions'
import { NAV_LINKS, NAV_PAGES } from '~/data/nav'
import { getAge } from '~/utils/date'
import GalaxyBackground from '../GalaxyBackground'
import NavDock from '../navigation/NavDock'
import { DEFAULT_THEME } from '../providers/ThemeProvider'

const {
	title,
	description = `I'm Pasuthorn Buala (or Palm), a full-stack developer and UI/UX designer from Bangkok, Thailand. I make cool things with user experience and accessibility in mind. I have been making websites and applications for more than ${getAge() - 13} years!`,
	flex,
	...rest
} = Astro.props
---

<html lang="en" data-theme={DEFAULT_THEME} data-transitionable="false" data-transition-on="theme-change">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />	
		<meta name="generator" content={Astro.generator} />
		<title>{title ? `${title} â€¢ Pasuthorn Buala (Palm)` : 'Pasuthorn Buala (Palm)'}</title>
		<meta name="theme-color" content="#b770ee" />
		<meta name="description" content={description} />
		<meta property="og:image" content="/assets/og.webp" />
		<meta property="og:image:width" content="500" />
		<meta property="og:image:height" content="500" />
		<meta property="og:image:type" content="image/webp" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<link rel="stylesheet" href="https://fonts.bunny.net/css?family=inter:500,600,700|jetbrains-mono:400|outfit:600,700&display=swap" />
		<script is:inline>const saved=localStorage.getItem("theme"),resolveTheme=()=>{switch(saved){case"dark":case"light":return saved;case"system":return matchMedia("(prefers-color-scheme:dark)")?"dark":"light";default:return"dark"}};document.documentElement.dataset.theme=resolveTheme();document.dispatchEvent(new Event("palmdevs:theme-change"));</script>
		<ClientRouter fallback="swap" />
	</head>
	<script>
		document.addEventListener("astro:before-swap", (e) => {
			e.newDocument.documentElement.dataset.theme = document.documentElement.dataset.theme
		})
	</script>
	<body>
		<NavDock transition:persist client:load pages={NAV_PAGES} links={NAV_LINKS} />
		<main data-transitionable="true" data-transition-on="nav" flex={`~ vert vert-x-center ${flex ?? ''}`} {...rest}>
			<slot />
		</main>
		<GalaxyBackground client:visible transition:persist />
	</body>
</html>

<style lang="scss">
	@use '~/styles/breakpoints';

	body {
		display: flex;
		flex-direction: column;
	}

	main[data-transitionable='true'] {
		view-transition-name: content;
	}
	
	main {
		flex: 1;
		padding-inline: var(--gap-xl);

		@media (max-width: breakpoints.$tablet) {
			padding-inline: var(--gap-m);
		}
	}

	// Until filters work correctly on NavDock with this, don't change:
	// ::global(body) {
	// 	view-transition-name: content;
	// }

	::view-transition-old(content),
	::view-transition-new(content) {
		backface-visibility: hidden;
	}

	::view-transition-image-pair(content) {
		perspective: 1000px;
	}
	
	::view-transition-old(content) {
		transform-origin: center 75vh;
		animation: old 600ms var(--ease) forwards;
	}

	::view-transition-new(content) {
		transform-origin: center -10vh;
		animation-name: new;
		animation-duration: 600ms;
		animation-timing-function: var(--ease);
		animation-delay: 150ms;
	}

	@keyframes old {
		to {
			transform: rotateX(20deg) translateZ(500px) translateY(150vh);
			opacity: 0;
		}
	}

	@keyframes new {
		from {
			opacity: 0;
			transform: rotateX(45deg) translateZ(-250px) scaleX(0.2) scaleY(0.75) translateY(20vh);
		}
	}
</style>
