---
import '../../styles/base.scss'
// import '../../styles/breakpoints-debug.scss'

import { ClientRouter } from 'astro:transitions'
import { NAV_LINKS, NAV_PAGES } from '../../data/nav'
import { getAge } from '../../utils/date'
import NavDock from '../navigation/NavDock'

const {
	title,
	description = `I'm Pasuthorn Buala (or Palm), a full-stack developer and UI/UX designer from Bangkok, Thailand. I make cool things with user experience and accessibility in mind. I have been making websites and applications for more than ${getAge() - 13} years!`,
	flex,
	...rest
} = Astro.props
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />	
		<meta name="generator" content={Astro.generator} />
		<title>{title ? `${title} â€¢ Pasuthorn Buala (Palm)` : 'Pasuthorn Buala (Palm)'}</title>
		<meta name="theme-color" content="#b770ee" />
		<meta name="description" content={description} />
		<meta property="og:image" content="/assets/og.webp" />
		<meta property="og:image:width" content="500" />
		<meta property="og:image:height" content="500" />
		<meta property="og:image:type" content="image/webp" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<link rel="stylesheet" href="https://fonts.bunny.net/css?family=inter:500,600,700|jetbrains-mono:400|outfit:600,700&display=swap" />
		<script is:inline>(() => {const saved=localStorage.getItem("theme");const {matches}=matchMedia("(prefers-color-scheme: dark)");document.documentElement.dataset.theme=!saved?(matches?"dark":"light"):saved;document.dispatchEvent(new Event('palmdevs:theme-change'))})()</script>
		<ClientRouter fallback="swap" />
	</head>
	<body>
		<NavDock transition:persist client:load pages={NAV_PAGES} links={NAV_LINKS} />
		<main flex={`~ vert vert-x-center ${flex ?? ''}`} {...rest}>
			<slot />
		</main>
	</body>
</html>

<style lang="scss">
	@use '../../styles/breakpoints';

	main {
		view-transition-name: content;
		padding-inline: var(--gap-xl);

		@media (max-width: breakpoints.$tablet) {
			padding-inline: var(--gap-m);
		}
	}

	// Until filters work correctly on NavDock with this, don't change:
	// ::global(body) {
	// 	view-transition-name: content;
	// }

	::view-transition-old(content),
	::view-transition-new(content) {
		animation-duration: var(--dur-medium);
		animation-timing-function: var(--ease);
	}

	::view-transition-old(content) {
		animation-name: fade-out;
	}

	::view-transition-new(content) {
		animation-delay: var(--dur-xshort);
		animation-name: slide-up-fade-in;
	}

	@keyframes fade-out {
		25% {
			opacity: 0;
		}
		to {
			opacity: 0; 
		}
	}

	@keyframes slide-up-fade-in {
		from {
			opacity: 0;
			transform: translateY(var(--gap-4xl));
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
</style>

<script>
  document.addEventListener("astro:before-swap", (e) => {
	e.newDocument.documentElement.dataset.theme = document.documentElement.dataset.theme
  })
</script>