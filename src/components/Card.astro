---
const { as: Tag = 'div', ...props } = Astro.props
---

<Tag class:list={["card", props.class]} {...props}>
    <slot />
</Tag>

<style>
    .card {
        border-radius: var(--rad-sm);
        background-color: var(--surface-highest);
        outline: var(--line) var(--surface-highest);
        outline-offset: -2px;
        backdrop-filter: blur(8px);
    }
</style>